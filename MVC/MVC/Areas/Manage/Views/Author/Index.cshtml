@model List<Author>
@{
    int count = 0;
}

<div class="row">
    <div class="col-lg-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Table with contextual classes</h4>
                <p class="card-description">
                    Add class <code>.table-{color}</code>
                </p>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Books Count 
                                </th>
                                <th>
                                    Settings
                                </th>
                                
                            </tr>
                        </thead>
                        <tbody>
                           @foreach (var item in Model)
                            {
                                count++;

                                <tr class="table-info">
                                    <td>
                                        @item.
                                    </td>
                                    <td>
                                        @item.FullName
                                    </td>
                                    <td>
                                        @item.Books.Count
                                    </td>
                                    <td>
                                        $ 77.99
                                    </td>
                                    
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>